<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog id="idDlReopen" title="Re-Open Request">
        <form:SimpleForm editable="true" layout="ResponsiveGridLayout" id="SimpleFormToolbarPricingDisplay">
            <form:content>
                <Label text="Please choose action" />
                <RadioButtonGroup id="idRgb" columns="2">
                    <RadioButton text="Edit" selected="true"/>
                    <RadioButton text="Delete" />
                </RadioButtonGroup>
                <Label text="Comment" required="true"/>
                <TextArea id="idTxtAreaComment"/>
                <Label />
                <Text id="idTxtReopen" visible="false"/>
            </form:content>
        </form:SimpleForm>
        <buttons>
            <Button text="Save" press="onPressReopenSave" type="Emphasized"/>
            <Button text="Cancel" press="onPressCanelReopen" type="Emphasized"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
