<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="idDlReopen" title="Re-Open Request">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Please choose action" />
                <RadioButtonGroup id="idRgb">
                    <RadioButton text="Edit" selected="true"/>
                    <RadioButton text="Delete" />
                </RadioButtonGroup>
                <Text id="idTxtReopen" visible="false"/>
            </VBox>
        </content>
        <buttons>
            <Button text="Save" press="onPressReopenSave" type="Emphasized"/>
            <Button text="Cancel" press="onPressCanelReopen" type="Emphasized"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
