<core:FragmentDefinition xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:semantic="sap.f.semantic"
    xmlns:footerbar="sap.ushell.ui.footerbar"
    xmlns:core="sap.ui.core">
    <Dialog id="myDialog" title="New Pricing Record ..">
        <!-- <content> -->
            <!-- <VBox class="sapUiSmallMargin"> -->
            <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                <form:content>
                    <Label text="Manufacturer Code" required="true" />
                    <Input id="idIpManf" change="onNameChange" />
                    <Label text="Manufacturer Name" />
                    <Input id="idIpManfDesc" rows="4" />
                    <Label text="Local Manufacturer Number" />
                    <Input id="idIpLocalManf" rows="4" />
                    <Label text="Local Manufacturer Desc" />
                    <Input id="idIpLocalManfDesc" rows="4" />
                    <Label text="Country" />
                    <Input  id="idIpCountry"  type="Text" placeholder="Enter Country ..."
                        showValueHelp="true" valueHelpOnly="true"  valueHelpRequest=".onValueHelpRequestCountry"
                        class="sapUiSmallMarginBottom" required="true"/>
                    <Label text="Country Desc" />
                    <Text id="idIpCountryDesc"/>
                </form:content>
            </form:SimpleForm>
        <!-- </content> -->
        <buttons>
            <Button text="Save" type="Emphasized" press=".onaddPricingData"/>
            <Button text="Cancel" press="onClosePricing" type="Emphasized"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>